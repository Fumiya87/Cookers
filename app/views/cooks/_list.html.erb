
  <div class="col-md-3 col-xs-3">
       <h2>User info</h2>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg" %>
     <table class="table">
      <tbody>
       <tr>
	        <th>name</th>
	        <th calss="profile-name"><%= @user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th></br>
	        <th calss="profile-name"> <%= @user.introduction %></th></br>
       </tr>
      </tbody>
     </table>
      
       <%= link_to  edit_user_path(@user),class:"btn btn-outline-secondary btn-block " do %>
       <i class="fas fa-user-cog"></i>
       
       <%end%>
       
       <h2 class="mt-3">New cook</h2>
       <%= form_with model:cook, url:'/cooks', local:true do |f| %>
       <div class="form-group">
        <label for="cook_title">Title</label>
        <%= f.text_field :title, class:"form-control cook_title" %>
       </div>
       <div class="form-group">
        <label for="cook_opinion">Opinion</label>
        <%= f.text_area :body, class:"form-control book_body" %>
       </div>
       <div class="form-group">
        <%= f.submit 'Create cook',class:"btn btn-success" %>
        <%end%>
       </div>
 </div>