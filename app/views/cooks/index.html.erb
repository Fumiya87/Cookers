
<div class="container px-5 px-sm-0">
    <div id="error_explannation">
          <% if @cook.errors.any? %>
          <%= @cook.errors.count %>errors prohibited this book from being saved:
          <% @cook.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
         <% end %>
    </div>
    <div class="row">
        <%= render 'cooks/list', cook: @cook %>
     <div class="col-md-8 offset-md-1">
      <h2>Cooks</h2>
      <table class="table table-hover table-inverse"> 
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
         <% @cooks.each do|cook| %>
         <tr>
             
             <td>
             <%= link_to user_path(cook.user) do %>
             <%= attachment_image_tag cook.user, :profile_image, :fill, 60,60, format:"jpg",fallback: "no_image.jpg" %>
             <%=  cook.user.name  %>
             <%end%>
             </td>
             <td><%=link_to cook.title, cook_path(cook.id) %></td>
             <td><%= cook.body %></td>
         </tr>
         <%end%>
        </tbody>
     </table>
   </div>
  </div>
</div>