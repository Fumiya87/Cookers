
<div class="container px-5 px-sm-0">
    <div class="row">
        <%= render 'cooks/list', cook: @cook %>
     <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse"> 
        <thead>
          <tr>
            <th>image</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
         <% @cooks.each do|cook| %>
         <tr>
             <td><%= attachment_image_tag cook.user, :profile_image, :fill, 60,60, format:"jpg",fallback: "no_image.jpg" %></td>
             <td><%= link_to cook.user.name  %></td>
             <td><%= link_to 'Show', user_path(cook.user) %></td>
         </tr>
         <%end%>
        </tbody>
     </table>
   </div>
  </div>
</div>