<div class="container px-5 px-sm-0">
    <div class="row">
     <div class="col-sm-12 col-md-8  col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <%= @user.errors.count %>errors prohibited this book from being saved:
      <% @user.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
       <div class="form-group">
         <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name", class:"form-control "%>
       </div>
       <div class="form-group">
         <label for="inputImage">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "Image", class:"form-control-file " %>
       </div>
       <div class="form-group">
         <label for="inputIntroduction">Introduction</label>
         <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction", class:"form-control "%>
        </div>
        <div class="form-group">
        <%= f.submit "Update User",  class:"btn btn-secondary"%>
        </div>
       <% end %>
     </div>
    </div>
</div>